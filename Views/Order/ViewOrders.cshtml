@model List<Order>

@{
    ViewData["Title"] = "ViewOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2>Your Orders</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            You have no orders yet.
        </div>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Total Amount</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.Date.ToShortDateString()</td>
                        <td>@order.Status</td>
                        <td>
                            @Html.DisplayFor(modelItem => order.OrderdItems.Sum(oi => oi.Amount * oi.Product.Price))
                        </td>
                        <td>
                            <a class="btn btn-primary" href="@Url.Action("OrderDetails", "Customer", new { id = order.Id })">View Details</a>
                        </td>
                        <td>
                            <ul class="list-unstyled">
                                @foreach (var item in order.OrderdItems)
                                {
                                    <li>
                                        <img src="@item.Product.img1" alt="@item.Product.Name" style="width: 50px; height: 50px;" />
                                        @item.Product.Name - @item.Amount
                                    </li>
                                }
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
