@model Product
@{
    ViewData["Title"] = "ShowDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ShowDetails</h1>

<br />
<br />

<div class="container" style="border-radius:40px">
    <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card" style="width: 100%;">
                    <img src=@Model.img1 class="card-img-top" alt="..." style=" height:200px; width:280px; " />
                    <div class="card-body">
                        <h4 class="card-title">@Model.Name</h4>
                        <h5 class="card-title">@Model.Description</h5>
                        <h6 class="card-title"> Width : @Model.Width</h6>
                        <h6 class="card-title">Height : @Model.Height</h6>
                        <h6 class="card-title">Depth : @Model.Depth</h6>
                        <a asp-controller="Home" asp-action="ShowProducts" asp-route-id="@Model.Id" class="btn btn-primary">Add Cart</a>
                    </div>
                </div>
            </div>



    </div>
</div>