@model List<Product>
@{
    ViewData["Title"] = "ShowProducts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ShowProducts</h1>


<br />
<br />

<div class="container" style="border-radius:40px">
    <div class="row">

        @foreach (Product p in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card" style="width: 100%;">
                    <img src=@p.img1 class="card-img-top" alt="..." style=" height:200px; width:280px; ">
                    <div class="card-body">
                        <h5 class="card-title">@p.Name</h5>
                        <h6 class="card-title">@p.Price $</h6>
                        <a asp-controller="Home" asp-action="ShowDetails" asp-route-id="@p.Id" class="btn btn-primary">Show Details</a>
                    </div>
                </div>
            </div>
        }


    </div>
</div>