@model List<Product>
@{
    ViewData["Title"] = "ShowProducts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Bootstrap JS (with Popper.js) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<div class="alert alert-success" role="alert">
    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Sort
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <li><a class="dropdown-item" asp-action="ShowProductsSorted" asp-route-pageNo="@ViewBag.prev" asp-route-Catid=" @ViewBag.catid" asp-controller="Home" asp-route-id="@Model.FirstOrDefault().CatId" asp-route-criteria="Price">Price </a></li>
            <li><a class="dropdown-item" asp-action="ShowProductsSorted" asp-route-pageNo="@ViewBag.prev" asp-route-Catid=" @ViewBag.catid" asp-controller="Home" asp-route-id="@Model.FirstOrDefault().CatId" asp-route-criteria="Rate">Rate </a></li>
            <li><a class="dropdown-item" asp-action="ShowProductsSorted" asp-route-pageNo="@ViewBag.prev" asp-route-Catid=" @ViewBag.catid" asp-controller="Home" asp-route-id="@Model.FirstOrDefault().CatId" asp-route-criteria="Alpha">Alphabeitically</a></li>
        </ul>
    </div>
</div>
<br />
<br />

<div class="container" style="border-radius:40px">
    <div class="row">

        @foreach (Product p in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card" style="width: 100%;">
                    <img src=@p.img1 class="card-img-top" alt="..." style=" height:200px; width:280px; ">
                    <div class="card-body">
                        <h5 class="card-title">@p.Name</h5>
                        <h6 class="card-title">@p.Price $</h6>
                        <a asp-controller="Home" asp-action="ShowDetails" asp-route-id="@p.Id" class="btn btn-primary">Show Details</a>
                    </div>
                </div>
            </div>
        }


    </div>
    <a asp-controller="Home" asp-action="ShowProducts" asp-route-pageNo="@ViewBag.prev" asp-route-Catid=" @ViewBag.catid" class="btn btn-secondary">Previous</a>

    <a asp-controller="Home" asp-action="ShowProducts" asp-route-pageNo="@ViewBag.next" asp-route-Catid=" @ViewBag.catid" class="btn btn-secondary">Next</a>

</div>